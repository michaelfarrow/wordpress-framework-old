#!/bin/bash

function heading {
	echo ""
	str="$@"
	len=$((${#str}+4))
	for i in $(seq $len); do echo -n '*'; done;
	echo; echo "* "$str" *";
	for i in $(seq $len); do echo -n '*'; done;
	echo
}

set -e

build_env="local"

if [[ "$1" != "" ]];
	then
	build_env="$1"
fi

composer_args=""
bower_args=""
npm_args=""

if [[ "$build_env" != "local" ]]; then
	composer_args="--no-progress"
	bower_args="--quiet"
	npm_args="--silent"
fi

cp "www/.env.$build_env" www/.env.example

if [[ "$build_env" != "local" ]]; then
	heading "Pulling Docker images"
	docker-compose -f docker-compose-tools.yml pull >/dev/null
fi

heading "Linking npm tools"
tools/build_link

heading "Installing Composer dependencies"
tools/composer install $composer_args

heading "Installing NPM dependencies"
tools/npm install $npm_args

heading "Installing Bower dependencies"
tools/bower install $bower_args

heading "Gulping"
tools/gulp
